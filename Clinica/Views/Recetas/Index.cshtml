@model IEnumerable<Clinica.Models.Recetas>
@{
    ViewBag.Title = "Recetas";
    ViewBag.descripcion = "En este módulo se pueden ver las recetas del paciente seleccionado, con una opción de visualizar el documento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-pacientes {
        background-color: #096b79;
    }
</style>

<h3 class="text-center text-uppercase">Recetas</h3>
<table class="table table-hover table-pacientes text-white text-center" id="dataTable">
    <thead class=" text-uppercase">
        <tr>
            <th class="text-center">
                Observación
            </th>
            <th class="text-center">
                Fecha de registro
            </th>
            <th class="text-center">
                Abrir
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.observacion
                </td>
                <td>
                    @item.fecha
                </td>
                <td>
                    <a href="~/Recetas/Previsualizar?id=@item.id_receta" target="_blank" class="text-white" >
                        <i class="pe-7s-look"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>



